{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "@wdio/types",
      "mocha",
      "@wdio/globals/types"
    ],
    "composite": true
  },
  "include": [
    "src",
    "test",
    "wdio.conf.ts",
    "wdio.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}