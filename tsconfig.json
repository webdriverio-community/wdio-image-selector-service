{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "types": [
      "node",
      "@wdio/globals/types"
    ]
  },
  "references": [
    {
      "path": "./example"
    }
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
